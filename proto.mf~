mode_setup;

def number(expr a,b) =
  draw (a,0)--(a,b);
  draw (3*a,0)--(3*a,2*b)--(5*a,2*b);
enddef;

def na(expr a,b) =
  draw (4*a,2*b)--(4*a,b);
enddef;

def nb(expr a,b) =
  draw (5*a,2*b)--(5*a,b);
enddef;

def nc(expr a,b) =
  draw (3*a,b)--(5*a,b);
enddef;

def nd(expr a,b) =
  draw (2*a,2*b)--(2*a,b);
enddef;

def ne(expr a,b) =
  draw (0,2*b)--(0,b);
enddef;

beginchar("0", 16pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
endchar;

beginchar("1", 16pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  na(a,b);
endchar;

beginchar("2", 12pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  nb(a,b);
endchar;

beginchar("3", 12pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  nc(a,b);
endchar;

beginchar("4", 12pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  nd(a,b);
endchar;

beginchar("5", 12pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  na(a,b);
  nd(a,b);
endchar;

beginchar("6", 12pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  nb(a,b);
  nd(a,b);
endchar;

beginchar("7", 12pt#, 10pt#, 0);
  pickup pencircle scaled 5;
  a := h/6;
  b := w/2;
  number(a,b);
  nc(a,b);
  nd(a,b);
endchar;

beginchar ("a", 9pt#, 12pt#, 0);
  alpha:=0.65;
  beta:=0.24;

  % define points
  x1 = 0; y1 = 0.8*h;
  x4 = w; y4 = 0.2*h;
  y2 = h; y3 = 0;
  x2 = (alpha-beta)*w;
  x5 = alpha*w;
  x3 = (alpha+beta)*w;
  y5 = 0.5*h;
  x6 = 0; y6 = 0.3*h;
  x7 = 0.2*w; y7 = 0;
  x8 = x5; y8 = 0.2*h;

  % define pen
  pickup pencircle xscaled 0.2w yscaled 0.04w rotated 30;

  % draw
  draw z1{dir 30}..z2{right}..z5{down}..z3{right}..z4{dir 30};
  draw z5..z6{down}..z7{right}..z8;
  penlabels(1,2,3,4,5,6,7,8);
endchar;

end
