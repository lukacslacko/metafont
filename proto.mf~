mode_setup;

def number(expr a,b) =
  draw (a,2*b)--(a,b);
  draw (3*a,2*b)--(3*a,0)--(5*a,0);
enddef;


beginchar("0", 12pt#, 12pt#, 0);
  pickup pencircle scaled 1;
  a := h/5;
  b := w/2;
  number(a,b);
endchar;

beginchar("1", 12pt#, 12pt#, 0);
  a := h/5;
  b := w/2;
  draw(4*a,0)--(4*a,b);
  draw (0,0)--(w,h);
endchar;

end
